#!/usr/bin/python
# -*- coding: UTF-8 -*-#
#
# Author: Abelardo Pardo (abelardo.pardo@uc3m.es)
#
import os, sys, subprocess, datetime, locale, codecs

# Fix the output encoding when redirecting stdout
if sys.stdout.encoding is None:
    (lang, enc) = locale.getdefaultlocale()
    if enc is not None:
        (e, d, sr, sw) = codecs.lookup(enc)
        # sw will encode Unicode data to the locale-specific character set.
        sys.stdout = sw(sys.stdout)

# Import the Adagio package
_dirName = os.path.dirname(__file__)
_dirName = os.path.abspath(os.path.join(_dirName, '..'))
sys.path.insert(0, _dirName)
sys.path.insert(0, os.path.join(_dirName, 'pla'))

import pla

dataDir = os.path.join(pla.plaDirectory, 'tools', 'gcc')
dataFile = os.path.join(dataDir, 'gcc')

def main(): 
    """
    Application to wrap the execution of the gcc compiler. Execute it normally
    and then parse the obtained ouptput and error streams.
    """
    
    global dataDir
    global dataFile

    pla.logMessage("gcc: plaDirectory = " + pla.plaDirectory)
    pla.logMessage("gcc: DataFile = " + dataFile)

    # Modify the first argument to point to the true executable
    sys.argv[0] = '/usr/bin/gcc'

    # Execute the given gcc command regularly
    try:
        pla.logMessage('gcc: executing ' + str(sys.argv))
        givenCmd = subprocess.Popen(sys.argv, stdout = subprocess.PIPE,
                                    stderr = subprocess.PIPE)
    except OSError, e:		  
        print 'File not found (PLA)'
        sys.exit(0)
    except ValueError, e:
        print 'Incorrect arguments (PLA)'
        sys.exit(0)
        
    # Wait for the process to terminate and get the output/error
    (gccOutput, gccError) = givenCmd.communicate()

    # Store the return status to return when the script finishes.
    originalStatus = givenCmd.returncode
    pla.logMessage('gcc: command status = ' + str(originalStatus))

    # Dump output and error if not None
    if gccError != None:
        pla.logMessage('gcc: stderr string')
        sys.stderr.write(gccError)
    else:
        pla.logMessage('gcc: No error string')

    if gccOutput != None:
        pla.logMessage('gcc: stdout string')
        sys.stdout.write(gccOutput)
    else:
        pla.logMessage('gcc: No output string')

    # If no file is present in pladirectory, no instrumentation
    if not os.path.exists(dataDir):
        pla.logMessage("gcc: Disabled. Skipping")
        sys.exit(originalStatus)

    # Append the captured messages to the file with a separator
    gccDataOut = open(dataFile, 'a')

    # Dump a mark for the erro with lines outputlines status and time/date
    errorLines = gccError.count('\n')
    outputLines = gccOutput.count('\n') 
    gccDataOut.write('-BEGIN ' + str(originalStatus) + ' ' \
                         + str(errorLines) + ' ' \
                         + str(outputLines) + ' ' \
                         + str(datetime.datetime.now())[:-7] \
                         + ' ' + ' '.join(sys.argv) + '\n')
    if errorLines != 0:
        gccDataOut.write(str(gccError))

    # Dump the output only if it is not empty
    if outputLines != 0:
        gccDataOut.write('-O ' + str(outputLines) + '\n')
        gccDataOut.write(str(gccOutput))

    gccDataOut.write('-END\n')

    gccDataOut.close()

    msg = '-BEGIN ' + str(originalStatus) + ' ' \
                    + str(errorLines) + ' ' \
                    + str(outputLines) + ' ' \
                    + str(datetime.datetime.now())[:-7] \
                    + ' ' + ' '.join(sys.argv) + '\n'

    if errorLines != 0:
        msg += str(gccError)

    # Dump the output only if it is not empty
    if outputLines != 0:
        msg += '-O ' + str(outputLines) + '\n'
        msg += str(gccOutput)

    msg += '-END\n'

    stream_publisher = pla.plaztreamy.EventPublisher()
    stream_publisher.publish_fields('gcc', msg)

    # And terminate gracefully with the status generated by the original SVN
    sys.exit(originalStatus)

if __name__ == "__main__":
    main()
